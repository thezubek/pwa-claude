# ============================================================
# PWA Claude Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# See docs/troubleshooting.md for help with configuration
# ============================================================

# ============================================================
# REQUIRED: API Configuration
# ============================================================

# PlentyONE API Endpoint URL
# Example: https://your-store.plentyone.com
API_ENDPOINT=

# PlentyONE API Security Token
# Get this from your PlentyONE admin panel
API_SECURITY_TOKEN=

# ============================================================
# OPTIONAL: Application Configuration
# ============================================================

# Alokai Middleware API URL (default: http://localhost:4000)
NUXT_PUBLIC_ALOKAI_MIDDLEWARE_API_URL=http://localhost:4000

# Node Environment (development, production, test)
NODE_ENV=development

# ============================================================
# Security & Captcha
# ============================================================

# Cloudflare Turnstile API Site Key (for bot protection)
CLOUDFLARETURNSTILEAPISITEKEY="0x4AAAAAAANx3aXDh7UR35x0"

# ============================================================
# Internationalization
# ============================================================

# Default language code (en, de, etc.)
DEFAULTLANGUAGE='en'

# Comma-separated list of active languages
LANGUAGELIST='en,de'

# ============================================================
# Image Optimization
# ============================================================

# Enable AVIF image format (modern browsers, best compression)
# Browser support: Chrome 85+, Edge 85+, Firefox 93+, Safari 16+
IMAGEAVIF=true

# Enable WebP image format (wide browser support, good compression)
# Browser support: Chrome 23+, Edge 18+, Firefox 65+, Safari 14+
IMAGEWEBP=true

# ============================================================
# Feature Flags
# ============================================================

# Validate return reasons in checkout
VALIDATE_RETURN_REASONS=1

# Enable quick checkout timer
ENABLE_QUICK_CHECKOUT_TIMER=1

# Use tags on category pages
USE_TAGS_ON_CATEGORY_PAGE=0

# ============================================================
# UI Configuration
# ============================================================

# Default number of feedback items per page
DEFAULT_FEEDBACK_ITEMS_PER_PAGE=10

# ============================================================
# Password Requirements
# ============================================================

# Minimum password length
PASSWORD_MIN_LENGTH=8

# Maximum password length
PASSWORD_MAX_LENGTH=64

# ============================================================
# Logging & Debugging
# ============================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable debug mode (shows debug logs in console)
NUXT_PUBLIC_DEBUG=false
