# ============================================================
# PWA Claude Middleware Server - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# ============================================================

# ============================================================
# Server Configuration
# ============================================================

# Node environment (development, production, test)
NODE_ENV=development

# Server host (use 0.0.0.0 in Docker, localhost otherwise)
HOST=0.0.0.0

# Server port
PORT=4000

# ============================================================
# PlentyONE API Configuration
# ============================================================

# PlentyONE API Endpoint URL
# Example: https://your-store.plentyone.com
# For Docker development, use: http://mock-api:8080
API_ENDPOINT=

# PlentyONE API Security Token
# Get this from your PlentyONE admin panel
API_SECURITY_TOKEN=

# ============================================================
# CORS Configuration
# ============================================================

# Allowed origins for CORS (comma-separated)
# For development, you might use: http://localhost:3000,http://localhost:4000
ALLOWED_ORIGINS=http://localhost:3000

# ============================================================
# Logging
# ============================================================

# Log level (fatal, error, warn, info, debug, trace)
LOG_LEVEL=info
